{
  "name": "materialize",
  "displayName": "materialize",
  "description": "Working environment for Materialize",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:calicoColors.colorsView"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == sql",
          "command": "materialize.run",
          "alt": "materialize.run",
          "group": "navigation"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "icon": "resources/logo.svg",
          "id": "materialize",
          "title": "Materialize"
        }
      ]
    },
    "views": {
      "materialize": [
        {
          "type": "webview",
          "id": "auth",
          "name": "Auth",
          "icon": "",
          "contextualTitle": "Auth"
        },
        {
          "id": "explorer",
          "name": "Explorer",
          "icon": "",
          "contextualTitle": "Explorer"
        }
      ]
    },
    "commands": [
      {
        "command": "materialize.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "materialize.run",
        "title": "Run SQL",
        "category": "materialize",
        "icon": {
          "light": "resources/logo.svg",
          "dark": "resources/logo.svg"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.79.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1"
  },
  "dependencies": {
    "@types/express": "^4.17.17",
    "@types/node-fetch": "^2.6.4",
    "@types/pg": "^8.10.2",
    "@types/uuid": "^9.0.2",
    "express": "^4.18.2",
    "jwks-rsa": "^3.0.1",
    "node-fetch": "^3.3.1",
    "node-jsonwebtoken": "^0.0.1",
    "pg": "^8.10.0",
    "toml": "^3.0.0",
    "uuid": "^9.0.0"
  }
}
