{
  "name": "vscode-materialize",
  "publisher": "Materialize",
  "repository": {
    "url": "https://github.com/MaterializeInc/vscode-extension"
  },
  "displayName": "Materialize",
  "description": "Working environment for Materialize.",
  "version": "0.1.2",
  "tasks": [
    {
      "problemMatcher": "$esbuild-watch"
    }
  ],
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onWebviewPanel:sqlResults",
    "onLanguage:sql",
    "onLanguage:md",
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "pricing": "Free",
  "icon": "resources/icon.png",
  "contributes": {
    "configuration": {
      "title": "Materialize",
      "properties": {
        "materialize.formattingWidth": {
          "type": "number",
          "default": 60,
          "description": "Maximum width for formatting code."
        }
      }
    },
    "languages": [
      {
        "id": "materialize-sql",
        "extensions": [
          ".sql"
        ],
        "aliases": [
          "Materialize SQL"
        ],
        "icon": {
          "light": "resources/file_icon_color.svg",
          "dark": "resources/file_icon.svg"
        },
        "configuration": "language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "materialize-sql",
        "scopeName": "source.materialize-sql",
        "path": "./syntaxes/materialize-sql.tmLanguage"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "materialize.run",
          "alt": "materialize.run",
          "group": "navigation"
        }
      ],
      "view/title": [
        {
          "when": "view == explorer",
          "command": "materialize.refresh",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "materialize.copy",
          "title": "Copy",
          "when": "view == explorer && (viewItem == table || viewItem == source || viewItem == view || viewItem == sink || viewItem == materialized_view)",
          "icon": {
            "light": "resources/clip_light.svg",
            "dark": "resources/clip_dark.svg"
          },
          "group": "inline"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "icon": "resources/logo.png",
          "id": "materialize",
          "title": "Materialize"
        }
      ],
      "panel": [
        {
          "id": "materializePanelContainer",
          "icon": "resources/logo.png",
          "title": "Query Results"
        }
      ]
    },
    "views": {
      "materialize": [
        {
          "type": "webview",
          "id": "profile",
          "name": "Profile",
          "icon": "",
          "contextualTitle": "Profile"
        },
        {
          "id": "explorer",
          "name": "Explorer",
          "icon": "",
          "contextualTitle": "Explorer"
        }
      ],
      "materializePanelContainer": [
        {
          "id": "queryResults",
          "name": "Query Results",
          "icon": "",
          "type": "webview",
          "contextualTitle": "Materialize"
        }
      ]
    },
    "commands": [
      {
        "command": "materialize.refresh",
        "title": "Refresh",
        "icon": "resources/refresh.svg"
      },
      {
        "command": "materialize.run",
        "title": "Run SQL",
        "category": "materialize",
        "icon": {
          "light": "resources/play.svg",
          "dark": "resources/play.svg"
        }
      },
      {
        "command": "materialize.copy",
        "title": "Copy",
        "category": "materialize",
        "icon": {
          "light": "resources/clip_light.svg",
          "dark": "resources/clip_dark.svg"
        }
      }
    ],
    "keybindings": [
      {
        "command": "materialize.run",
        "key": "ctrl+enter",
        "mac": "cmd+enter",
        "when": "resourceLangId == 'sql' || resourceLangId == 'materialize-sql'"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts ./src/providers/scripts/* --bundle --outdir=out/ --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "lint": "eslint src --ext ts",
    "test-compile-watch": "tsc -p ./ --watch",
    "test-compile": "tsc -p ./",
    "pretest": "node esbuild.js",
    "test": "node ./out/test/runTest.js",
    "deploy": "vsce publish",
    "deploy-pre-release": "vsce publish --pre-release"
  },
  "devDependencies": {
    "@types/chai": "^4.3.5",
    "@types/glob": "^8.1.0",
    "@types/keychain": "^1.4.3",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/tar": "^6.1.6",
    "@types/vscode": "^1.79.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "chai": "^4.3.7",
    "esbuild": "^0.16.17",
    "eslint": "^8.41.0",
    "express": "^4.18.2",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "selenium-webdriver": "^4.10.0",
    "ts-loader": "^9.4.3",
    "typescript": "5.0.4",
    "vscode-extension-tester": "^5.8.0"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "@types/express": "^4.17.17",
    "@types/node-fetch": "^2.6.4",
    "@types/pg": "^8.10.2",
    "@types/semver": "^7.5.3",
    "@types/uuid": "^9.0.2",
    "@vscode/webview-ui-toolkit": "^1.2.2",
    "jwks-rsa": "^3.0.1",
    "keychain": "^1.5.0",
    "node-fetch": "^3.3.1",
    "node-jsonwebtoken": "^0.0.1",
    "pg": "^8.10.0",
    "semver": "^7.5.4",
    "tar": "^6.2.0",
    "uuid": "^9.0.0",
    "vscode-languageclient": "^7.0.0"
  }
}
