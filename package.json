{
  "name": "vscode-materialize",
  "publisher": "Materialize",
  "repository": {
    "url": "https://github.com/MaterializeInc/vscode-extension"
  },
  "displayName": "Materialize",
  "description": "Working environment for Materialize.",
  "version": "0.0.1-rc.1",
  "tasks": [
    {
      "problemMatcher": "$esbuild-watch"
    }
  ],
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onWebviewPanel:sqlResults",
    "onLanguage:sql"
  ],
  "main": "./out/extension.js",
  "pricing": "Free",
  "contributes": {
    "iconThemes": [
      {
        "id": "materialize-icons",
        "label": "Materialize Icons",
        "path": "./icons"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == sql",
          "command": "materialize.run",
          "alt": "materialize.run",
          "group": "navigation"
        }
      ],
      "view/title": [
        {
          "when": "view == explorer",
          "command": "materialize.refresh",
          "group": "navigation"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "icon": "resources/logo.svg",
          "id": "materialize",
          "title": "Materialize"
        }
      ],
      "panel": [
        {
          "id": "materializePanelContainer",
          "icon": "resources/logo.svg",
          "title": "Query Results"
        }
      ]
    },
    "views": {
      "materialize": [
        {
          "type": "webview",
          "id": "profile",
          "name": "Profile",
          "icon": "",
          "contextualTitle": "Profile"
        },
        {
          "id": "explorer",
          "name": "Explorer",
          "icon": "",
          "contextualTitle": "Explorer"
        }
      ],
      "materializePanelContainer": [
        {
          "id": "queryResults",
          "name": "Query Results",
          "icon": "",
          "type": "webview",
          "contextualTitle": "Materialize"
        }
      ]
    },
    "commands": [
      {
        "command": "materialize.refresh",
        "title": "Refresh",
        "icon": "resources/refresh.svg"
      },
      {
        "command": "materialize.run",
        "title": "Run SQL",
        "category": "materialize",
        "icon": {
          "light": "resources/play.svg",
          "dark": "resources/play.svg"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts ./src/webview/index.ts ./src/providers/scripts/* --bundle --outdir=out/ --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "lint": "eslint src --ext ts",
    "test-compile-watch": "tsc -p ./ --watch",
    "test-compile": "tsc -p ./",
    "pretest": "node esbuild.js",
    "test": "node ./out/test/runTest.js",
    "deploy": "vsce publish --yarn"
  },
  "devDependencies": {
    "@types/chai": "^4.3.5",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.79.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "chai": "^4.3.7",
    "esbuild": "^0.16.17",
    "eslint": "^8.41.0",
    "express": "^4.18.2",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "selenium-webdriver": "^4.10.0",
    "ts-loader": "^9.4.3",
    "typescript": "5.0.4",
    "vscode-extension-tester": "^5.8.0"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "@types/express": "^4.17.17",
    "@types/node-fetch": "^2.6.4",
    "@types/pg": "^8.10.2",
    "@types/uuid": "^9.0.2",
    "@vscode/webview-ui-toolkit": "^1.2.2",
    "jwks-rsa": "^3.0.1",
    "node-fetch": "^3.3.1",
    "node-jsonwebtoken": "^0.0.1",
    "pg": "^8.10.0",
    "uuid": "^9.0.0"
  }
}
